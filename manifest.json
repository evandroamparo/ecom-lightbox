{
  "name": "E-com Lightbox",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Visualiza imagens anexadas no e-com em pop-ups",
  "homepage_url": "http://intranet.tecsystem.info/ecom/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "*://intranet.tecsystem.info/ecom/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://intranet.tecsystem.info/ecom/*"
      ],
      "js": [
        "src/inject/inject.js", 
        "js/jquery-1.10.2.min.js",
        "js/jquery.mousewheel-3.0.6.pack.js",
        "js/jquery.fancybox.pack.js"
      ],
      "css": [
        "css/jquery.fancybox.css"
      ]
    }
  ],
  "web_accessible_resources": [
       "img/blank.gif",
       "img/fancybox_loading.gif",
       "img/fancybox_overlay.png",  
       "img/fancybox_sprite.png"
     ]
}